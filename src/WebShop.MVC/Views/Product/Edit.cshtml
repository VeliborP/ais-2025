@model WebShop.MVC.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile"></label>
                <input asp-for="ImageFile" type="file" class="form-control" accept="image/png, image/jpeg, image/jpg, image/gif" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <div class="mb-2">
                    <img id="preview" src="@Model.ImagePath" width="150" />
                    <div>
                        <button type="button" class="btn btn-sm btn-danger mt-2" id="clearImageBtn"> Delete image </button>
                    </div>
                </div>
                
            }
            else
            {
                <div class="mb-2">
                    <img id="preview" class="img-thumbnail d-none" style="max-width:200px;" />
                    <div>
                        <button type="button" class="btn btn-sm btn-danger mt-2" id="clearImageBtn"> Delete imaage </button>
                    </div>
                </div>
            }
            <input type="hidden" asp-for="ImagePath" />
            <input type="hidden" asp-for="DeleteImage" id="DeleteImage" value="false" />

            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="Model.Categories"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        const input = $('#ImageFile');
        const preview = $('#preview');
        const clearBtn = $('#clearImageBtn');
        const deleteFlag = $('#DeleteImage');

        input.on('change', function () {
           const file = this.files[0];
           if (!file) {
               clearImage();
               return;
           }

           const reader = new FileReader();
           reader.onload = function (e) {
               preview.attr('src', e.target.result);
               preview.removeClass('d-none');
               deleteFlag.val('false');
           };
           reader.readAsDataURL(file);
        });

        clearBtn.on('click', function () {
            clearImage();
            deleteFlag.val('true');
        });

        function clearImage() {
            input.val('')
            preview.attr('src', '');
            preview.addClass("d-none");
        }
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
